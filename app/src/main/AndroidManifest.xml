<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="tech.diarmaid.koohiiaite">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        <activity
                android:name="tech.diarmaid.koohiiaite.activity.KanjiListActivity"
                android:label="@string/app_name"
                android:launchMode="singleTop"
                android:configChanges="orientation|keyboardHidden|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>
            <meta-data
                    android:name="android.app.searchable"
                    android:resource="@xml/searchable">
            </meta-data>
        </activity>
        <activity
                android:name="tech.diarmaid.koohiiaite.activity.KanjiDetailActivity"
                android:label="@string/app_name"
                android:parentActivityName="tech.diarmaid.koohiiaite.activity.KanjiListActivity"
                android:configChanges="orientation|keyboardHidden|screenSize">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="tech.diarmaid.koohiiaite.activity.KanjiListActivity"/>
        </activity>
        <activity
                android:name="tech.diarmaid.koohiiaite.activity.PrimitiveListActivity"
                android:label="@string/title_primitives"
                android:parentActivityName="tech.diarmaid.koohiiaite.activity.KanjiListActivity">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="tech.diarmaid.koohiiaite.activity.KanjiListActivity"/>
        </activity>
        <activity android:name="tech.diarmaid.koohiiaite.activity.ImportStoryActivity"
                  android:label="@string/title_import_story"
                  android:parentActivityName="tech.diarmaid.koohiiaite.activity.KanjiListActivity">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="tech.diarmaid.koohiiaite.activity.KanjiListActivity"/>
        </activity>
        <activity
                android:name="com.ipaulpro.afilechooser.FileChooserActivity"
                android:icon="@drawable/ic_chooser"
                android:enabled="@bool/use_activity"
                android:exported="true"
                android:label="@string/title_choose_csv">
        </activity>
    </application>
</manifest>
