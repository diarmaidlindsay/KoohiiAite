<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorBackground">@color/ka_bright2</item>
        <item name="android:background">@color/ka_bright2</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:actionMenuTextColor">@android:color/black</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/ka_bright2</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/ka_neutral</item>
        <!-- colorAccent is used as the default value for colorControlActivated which is used to tint widgets -->
        <!-- it seems to be activated when I press a widget -->
        <item name="colorAccent">@android:color/holo_red_dark</item>
        <item name="colorControlNormal">@android:color/holo_blue_dark</item>
    </style>
    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/MyTitleTextStyle</item>
    </style>
    <style name="MyTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="DetailTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:typeface">monospace</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/ka_dark2</item>
    </style>
    <style name="DetailItem" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/ka_bright2</item>
    </style>
    <style name="SampleTitle" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:typeface">monospace</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/ka_dark2</item>
    </style>
    <style name="SampleItem" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/ka_bright2</item>
    </style>
    <style name="GreyItalicSmallText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name="KoohiiButton" parent="@android:style/TextAppearance.Medium">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/ka_neutral</item>
    </style>

    <style name="fileChooserName">
        <item name="android:drawablePadding">@dimen/list_item_padding</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">2</item>
        <item name="android:paddingLeft">@dimen/list_item_padding</item>
        <item name="android:paddingRight">@dimen/list_item_padding</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="storyAsterix">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="storyHash">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/ka_dark1</item>
    </style>

</resources>